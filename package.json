{
  "name": "xwing-list-loader",
  "version": "0.0.0-development",
  "description": "Load lists in xws format from all popular X-Wing list builders",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "author": "Guido Kessels <guidokessels@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "type-check": "tsc -p ./tsconfig.json --noEmit",
    "test": "jest lib",
    "test:watch": "jest lib --watch",
    "semantic-release": "semantic-release"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "es5",
    "tabWidth": 2,
    "printWidth": 100
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "yarn run type-check && yarn run lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "jest --bail --findRelatedTests"
    ]
  },
  "jest": {
    "preset": "ts-jest/presets/js-with-ts",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=12.0.0"
  },
  "dependencies": {
    "cross-fetch": "^3.0.4"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^8.3.4",
    "@types/jest": "^26.0.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.10",
    "nock": "^12.0.3",
    "prettier": "^2.0.5",
    "semantic-release": "^17.0.8",
    "ts-jest": "^26.1.0",
    "typescript": "^3.9.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/guidokessels/xwing-list-loader.git"
  }
}
